{% extends 'base.html' %}

{% block content %}

   <style>
    /* Custom CSS styles for the signup page */
    .signup-container {
        text-align: center;
        margin-top: 100px;
    }

    .signup-container h1 {
        font-size: 36px;
        color: #333;
        margin-bottom: 20px;
    }

    .signup-container form {
        display: flex;
        flex-direction: column;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .signup-container label {
        font-size: 18px;
        color: #666;
        margin-bottom: 5px;
        text-align: left;
    }

    .signup-container input {
        padding: 10px;
        margin-bottom: 15px;
        font-size: 16px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .signup-btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #FF5A5F;
        color: #fff;
        font-size: 20px;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s;
        cursor: pointer;
    }

    .signup-btn:hover {
        background-color: #E5484D;
    }

    .signup-container p {
        font-size: 16px;
        color: #666;
        margin-top: 15px;
    }

    .signup-container p a {
        color: #FF5A5F;
        text-decoration: none;
   




</style>





    <div class="signup-container">
        <h1>Create an Account</h1>

        <div style='display: flex; margin-left: 33vw; cursor: pointer; box-sizing: border-box; border: 1px solid red; width: 100px; align-items: center; background: red'>
        <img 
            style='width: 40%; background: white;' src="{{ url_for('static',filename='assets/images/google.png') }}">
        <a href="{{ url_for('authorize',provider='google')}}" style="text-decoration: none; color: white; margin-left: 3px">
            Google
        </a>    
        </div>

        <form method="POST">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>
            
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
            
            <button type="submit" class="signup-btn">Sign Up</button>
        </form>
        <p>Already have an account? <a href="/login">Log in here</a></p>
    </div>
{% endblock %}

