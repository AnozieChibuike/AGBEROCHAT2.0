{% extends 'base.html.jinja' %}

{% block content %}
     
    <style>
    /* Custom CSS styles for the login page */
    .login-container {
        text-align: center;
        margin-top: 100px;
    }
.remember-me {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        font-size: 16px;
        color: #666;
    }

    .remember-me input {
        margin-right: 10px;
    }

    .login-container h1 {
        font-size: 36px;
        color: #333;
        margin-bottom: 20px;
    }

    .login-container form {
        display: flex;
        flex-direction: column;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .login-container label {
        font-size: 18px;
        color: #666;
        margin-bottom: 5px;
        text-align: left;
    }

    .login-container input {
        padding: 10px;
        margin-bottom: 15px;
        font-size: 16px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .login-btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #FF5A5F;
        color: #fff;
        font-size: 20px;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s;
        cursor: pointer;
    }

    .login-btn:hover {
        background-color: #E5484D;
    }

    .login-container p {
        font-size: 16px;
        color: #666;
        margin-top: 15px;
    }

    .login-container p a {
        color: #FF5A5F;
        text-decoration: none;
    }
</style>

     
    
    
    <div class="login-container">
        <h1>Login to Your Account</h1>
        <div style='display: flex; margin-left: 33vw; cursor: pointer; box-sizing: border-box; border: 1px solid red; width: 100px; align-items: center; background: red'>
        <img 
            style='width: 40%; background: white;' src="{{ url_for('static',filename='assets/images/google.png') }}">
        <a href="{{ url_for('authorize',provider='google')}}" style="text-decoration: none; color: white; margin-left: 3px">
            Google
        </a>    
        </div>
        <form action="/login" method="POST">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
            <div class="remember-me">
                <input type="checkbox" id="remember-me" name="remember-me">
                <label for="remember-me">Remember Me</label>
            </div>
            <button type="submit" class="login-btn">Log In</button>
        </form>
        <p>Don't have an account yet? <a href="/signup">Sign up here</a></p>
    </div>
{% endblock %}

